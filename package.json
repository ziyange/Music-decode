{
  "name": "music-decoder",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "electron": "electron electron/main.js",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron electron/main.js\"",
    "electron-build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.7.0",
    "concurrently": "^9.2.1",
    "electron": "^30.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.8.0",
    "vite": "^5.0.0",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vue-tsc": "^3.0.4",
    "wait-on": "^9.0.1"
  },
  "main": "electron/main.js",
  "description": "NCM音乐文件解码器 - 将网易云音乐加密文件转换为标准音频格式",
  "author": "Music Decoder Team",
  "build": {
    "appId": "com.musicdecoder.app",
    "productName": "Music Decoder",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "app/**/*"
    ],
    "extraResources": [
      {
        "from": "app/ncmdump.exe",
        "to": "app/ncmdump.exe"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
